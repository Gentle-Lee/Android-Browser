<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.android_browsesr.MainActivity"
    android:orientation="vertical"
    android:background="@null">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/browser_icon"
        android:src="@drawable/ic_browser_black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:onClick="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/url_editText"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null"
        android:padding="15dp"
        android:maxLines="1"
        android:maxLength="50"
        android:layout_below="@id/browser_icon"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/url_editText">
        <RelativeLayout
            android:id="@+id/mail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:onClick="true">
            <ImageView
                android:id="@+id/mail_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mail"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mail_icon"
                android:layout_centerHorizontal="true"
                android:text="mail"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:onClick="true">
            <ImageView
                android:id="@+id/download_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_download"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/download_icon"
                android:text="download"
                android:layout_marginRight="15dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:onClick="true">
            <ImageView
                android:id="@+id/setting_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_setting"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_icon"
                android:text="settings"
                android:layout_marginRight="15dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homepage_bottom_navigation"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/more_icon"
            android:src="@drawable/ic_bubble_chart_black_24dp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:onClick="true"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/menu_icon"
            android:layout_weight="6"
            android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
            android:padding="10dp"
            android:onClick="true"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/exit_icon"
            android:src="@drawable/ic_power_settings_new_black_24dp"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:onClick="true"/>
    </LinearLayout>
</RelativeLayout>
